@model CountryDatatableFilterViewModel
@{
    ViewBag.ModuleName = _CommonLocalizer["Country"];
    ViewBag.ModuleIcon = "globe";
}
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="row card-title align-middle">
                    <div class="col-md-12 mt-1">
                        <form id="filterForm">
                            <div>
                                <div class="d-flex justify-content-between align-items-center row py-3 gap-3 gap-md-0">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <label class="form-label">@_CommonLocalizer["Search"]</label>
                                            <input type="text" id="searchName" placeholder="@_CommonLocalizer["Search"]" class="form-control">
                                        </div>
                                        <div class="col-md-2 mt-4">
                                            <button type="button" id="filter" class="mt-1 search-button btn btn-primary waves-effect waves-light form-control">
                                                @_CommonLocalizer["Filter"]
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="table-responsive">
                    <table id="countriesTable" class="datatables-products table">
                        <thead class="bg-primary">
                            <tr>
                                <th class="text-white fw-bold"><i class="fa fa-map link-icon fa-fw"></i> @_CommonLocalizer["Name"]</th>
                                <th class="text-white fw-bold"><i class="fa fa-globe link-icon fa-fw"></i> @_CommonLocalizer["DialCode"]</th>
                                <th class="text-white fw-bold"><i class="fa fa-flag link-icon fa-fw"></i> @_CommonLocalizer["CountryCode"]</th>
                                <th class="text-white fw-bold"><i class="fa fa-map-marker-alt link-icon fa-fw"></i> @_CommonLocalizer["FlagCode"]</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="/customjs/Country.js" asp-append-version="true"></script>
}
