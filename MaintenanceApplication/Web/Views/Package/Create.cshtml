@model PackageCreateViewModel
@{
    ViewBag.ModuleName = _CommonLocalizer["Create"] +' '+ _CommonLocalizer["Package"];
    ViewBag.ModuleIcon = "cube";
    var freelancers = ViewBag.Freelancers as List<DropdownDto> ?? new List<DropdownDto>();

}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form asp-action="Create" asp-controller="Package" method="post" class="form-freelancer">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="mb-4">
                                <label asp-for="Name" class="form-label">@_CommonLocalizer["PackageName"]</label>
                                <input type="text" class="form-control" asp-for="Name" placeholder="@_CommonLocalizer["PackageName"]">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="mb-4">
                                <label class="form-label">@_CommonLocalizer["FreelancerName"]</label>
                                @Html.DropDownListFor(a => a.FreelancerId, new SelectList(freelancers, "Id", "Name"), _CommonLocalizer["Select"], new { @class = "form-control select2Input" })
                                <span asp-validation-for="FreelancerId" class="text-danger"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="Price" class="form-label">@_CommonLocalizer["Price"]</label>
                                <input type="text" class="form-control" asp-for="Price" placeholder="@_CommonLocalizer["Price"]">
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="OfferDetails" class="form-label">@_CommonLocalizer["Offering"]</label>
                                <textarea asp-for="OfferDetails" class="form-control" rows="4" placeholder="Describe what you are offering"></textarea>
                                <span asp-validation-for="OfferDetails" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <div>
                                <a asp-action="Index" class="btn btn-secondary me-2"><i data-feather="x"></i> @_CommonLocalizer["Cancel"]</a>
                                <button type="submit" class="btn btn-primary"><i data-feather="save"></i> @_CommonLocalizer["Create"]</button>
                            </div>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

