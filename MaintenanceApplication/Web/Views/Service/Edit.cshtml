@model ServiceEditViewModel
@{
    ViewBag.ModuleName = _CommonLocalizer["Category"];
    ViewBag.ModuleIcon = "th-large";
}

<div class="row card">
    <div class="col-md-12 card-body">
        <form asp-action="Edit" asp-controller="Service" method="post" class="form-service">
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="mt-3">
                    <div class="row mb-3">
                        <label class="col-sm-3 col-form-label">@_CommonLocalizer["CategoryName"]</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" asp-for="Name" placeholder="@_CommonLocalizer["CategoryName"]">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-3 col-form-label">@_CommonLocalizer["CreatedBy"]</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control disablePointerEvents" value="@(Model.IsUserCreated ? "Freelancer" : "Admin")" readonly>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-3 col-form-label">@_CommonLocalizer["Status"]</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control disablePointerEvents" value="@(Model.IsApproved ? "Approved" : "Pending")" readonly>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <div>
                            <a asp-action="Index" class="btn btn-xs btn-secondary me-2"> @_CommonLocalizer["Cancel"]</a>
                            <button type="submit" class="btn btn-xs btn-primary"> @_CommonLocalizer["Edit"]</button>
                        </div>
                        <div>
                            @if (Model.IsApproved == false)
                            {
                                <button type="button" id="approve-service" data-id="@Model.Id" class="btn btn-xs btn-success">
                                   @_CommonLocalizer["Approve"]
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="/customjs/Services/Edit.js" asp-append-version="true"></script>
}
