@model ChangePasswordViewModel
<div class="container-fluid">

    <h4 class="py-3 mb-4"><span class="text-muted fw-light">@_CommonLocalizer["User"] /</span> @_CommonLocalizer["ChangePassword"]</h4>

    <div class="row">
        <div class="col-md-6">
            <div class="card  card-tasks">
                <div class="card-header ">
                    <h5 class="card-category">@_CommonLocalizer["ChangePassword"]</h5>
                </div>
                <div class="card-body ">
                    <form  method="post" asp-controller="Users" asp-action="ChangePassword">
                        <div class="form-group mt-2">
                            <label class="required">@_CommonLocalizer["OldPassword"]</label>
                            <input asp-for="OldPasword" type="password" class="form-control" />
                            <span asp-validation-for="OldPasword" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-2">
                            <label class="required">@_CommonLocalizer["NewPassword"]</label>
                            <input asp-for="NewPassword" type="password" class="form-control" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-2">
                            <label class="required">@_CommonLocalizer["ConfirmPassword"]</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <button type="submit" class=" btn btn-primary mt-2">@_CommonLocalizer["SaveBtn"]</button>
                    </form>
                </div>
                <div class="card-footer ">
                </div>
            </div>
        </div>
    </div>
</div>


