@model ChangePasswordViewModel
<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">@_CommonLocalizer["ChangePassword"]</h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="Users" asp-action="ChangePassword">
                        <!-- Old Password -->
                        <div class="form-group mb-3">
                            <label class="form-label required">@_CommonLocalizer["OldPassword"]</label>
                            <div class="input-group">
                                <input asp-for="OldPassword"
                                       id="OldPassword"
                                       class="form-control border-end-0"
                                       type="password"
                                       placeholder="@_CommonLocalizer["OldPassword"]">
                                <button type="button" class="btn btn-outline-secondary toggle-password">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="OldPassword" class="text-danger"></span>
                        </div>

                        <!-- New Password -->
                        <div class="form-group mb-3">
                            <label class="form-label required">@_CommonLocalizer["NewPassword"]</label>
                            <div class="input-group">
                                <input asp-for="NewPassword"
                                       id="NewPassword"
                                       class="form-control border-end-0"
                                       type="password"
                                       placeholder="@_CommonLocalizer["NewPassword"]">
                                <button type="button" class="btn btn-outline-secondary toggle-password">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>

                        <!-- Confirm Password -->
                        <div class="form-group mb-3">
                            <label class="form-label required">@_CommonLocalizer["ConfirmPassword"]</label>
                            <div class="input-group">
                                <input asp-for="ConfirmPassword"
                                       id="ConfirmPassword"
                                       class="form-control border-end-0"
                                       type="password"
                                       placeholder="@_CommonLocalizer["ConfirmPassword"]">
                                <button type="button" class="btn btn-outline-secondary toggle-password">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <div>
                            <button type="submit" class="btn btn-outline-primary btn-icon-text mb-2 mb-md-0">
                                @_CommonLocalizer["SaveBtn"]
                            </button>

                            <a asp-controller="Users" asp-action="Index" class="btn btn-outline-info btn-icon-text mb-2 mb-md-0">
                                @_CommonLocalizer["CancelBtn"]
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.toggle-password').on('click', function () {
                const input = $(this).siblings('input');
                const icon = $(this).find('i');
                const type = input.attr('type') === 'password' ? 'text' : 'password';

                input.attr('type', type);
                icon.toggleClass('fa-eye fa-eye-slash');
            });
        });
    </script>
}
