@model ResetPasswordViewModel
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card  card-tasks">
                <div class="card-header ">
                    <h5 class="card-category">@_CommonLocalizer["ResetPassword"]</h5>
                </div>
                <div class="card-body ">
                    <form method="post" id="resetPasswordForm">
                        <input asp-for="UserId" type="hidden" />
                        <div class="form-group mb-3">
                            <label class="form-label required">@_CommonLocalizer["NewPassword"]</label>
                            <div class="input-group">
                                <input asp-for="NewPassword" id="NewPassword" class="form-control border-end-0"
                                       type="password" placeholder="@_CommonLocalizer["NewPassword"]">
                                <button type="button" class="btn btn-outline-secondary toggle-password">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>

                        <!-- Confirm Password -->
                        <div class="form-group mb-3">
                            <label class="form-label required">@_CommonLocalizer["ConfirmPassword"]</label>
                            <div class="input-group">
                                <input asp-for="ConfirmPassword" id="ConfirmPassword" class="form-control border-end-0"
                                       type="password" placeholder="@_CommonLocalizer["ConfirmPassword"]">
                                <button type="button" class="btn btn-outline-secondary toggle-password">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div>
                            <button type="submit" class="btn btn-outline-primary btn-icon-text mb-2 mb-md-0">
                                @_CommonLocalizer["SaveBtn"]
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer ">
                </div>
            </div>
        </div>
    </div>
</div>

