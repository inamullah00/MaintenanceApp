@model FreelancerCreateViewModel
@{
    ViewBag.ModuleName = _CommonLocalizer["Freelancer"];
    ViewBag.ModuleIcon = "user";
    var countries = ViewBag.Countries as List<CountryResponseViewModel> ?? new List<CountryResponseViewModel>();
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="FullName" class="form-label">@_CommonLocalizer["FullName"]</label>
                                <input type="text" class="form-control" asp-for="FullName" placeholder="@_CommonLocalizer["FullName"]">
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">@_CommonLocalizer["Email"]</label>
                                <input type="email" class="form-control" asp-for="Email" placeholder="@_CommonLocalizer["Email"]">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">@_CommonLocalizer["Password"]</label>
                                <input type="password" autocomplete="new-password" class="form-control" asp-for="Password" placeholder="@_CommonLocalizer["Password"]">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">@_CommonLocalizer["ConfirmPassword"]</label>
                                <input type="password" autocomplete="new-password" class="form-control" asp-for="Password" placeholder="@_CommonLocalizer["ConfirmPassword"]">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <div class="row mb-3">
                                <label for="exampleInputMobile" class="col-sm-3 col-form-label">@_CommonLocalizer["Mobile"]</label>
                                <div class="col-sm-3">
                                    <select asp-for="CountryId" class="select-with-flags" style="width: 100%;">
                                        @foreach (var country in countries)
                                        {
                                            var isSelected = country.Id == Model.CountryId;
                                            if (isSelected)
                                            {
                                                <option value="@country.Id" data-flag="@country.Code.ToLower()" data-dial-code="@country.DialCode" data-country="@country.Name" selected>
                                                    @country.DialCode
                                                </option>
                                            }
                                            else
                                            {
                                                <option value="@country.Id" data-flag="@country.Code.ToLower()" data-dial-code="@country.DialCode" data-country="@country.Name">
                                                    @country.DialCode
                                                </option>
                                            }

                                        }
                                    </select>
                                </div>
                                <div class="col-sm-6">
                                    <input type="number" class="form-control" asp-for="PhoneNumber" placeholder="@_CommonLocalizer["Mobile"]">
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label asp-for="DateOfBirth" class="form-label">Date of Birth</label>
                                <input asp-for="DateOfBirth" type="date" class="form-control">
                                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="ProfilePicture" class="form-label">Profile Picture</label>
                                <input type="file" class="form-control" name="ProfilePictureFile" accept="image/*">
                                <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="ExperienceLevel" class="form-label">Experience Level</label>
                                <select asp-for="ExperienceLevel" asp-items="@ViewBag.ExperienceLevels" class="form-select">
                                    <option value="">Select Experience Level</option>
                                </select>
                                <span asp-validation-for="ExperienceLevel" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="CountryId" class="form-label">Country</label>
                                <select asp-for="CountryId" asp-items="@ViewBag.Countries" class="form-select">
                                    <option value="">Select Country</option>
                                </select>
                                <span asp-validation-for="CountryId" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Status" class="form-label">Account Status</label>
                                <select asp-for="Status" asp-items="@ViewBag.AccountStatuses" class="form-select">
                                    <option value="">Select Account Status</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="CivilID" class="form-label">Civil ID (PDF)</label>
                                <input type="file" class="form-control" name="CivilIDFile" accept=".pdf">
                                <span asp-validation-for="CivilID" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="mb-3">
                                <label asp-for="Bio" class="form-label">Bio</label>
                                <textarea asp-for="Bio" class="form-control" rows="4" placeholder="Enter bio"></textarea>
                                <span asp-validation-for="Bio" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="PreviousWork" class="form-label">Previous Work</label>
                                <textarea asp-for="PreviousWork" class="form-control" rows="4" placeholder="Enter previous work experience"></textarea>
                                <span asp-validation-for="PreviousWork" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="text-end">
                        <a asp-action="Index" class="btn btn-secondary me-2">
                            <i data-feather="x"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i data-feather="save"></i> Create Freelancer
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

