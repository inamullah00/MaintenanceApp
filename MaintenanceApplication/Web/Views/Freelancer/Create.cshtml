@model Maintenance.Application.Dto_s.UserDto_s.FreelancerAuthDtos.FreelancerRegistrationDto
@{
    ViewBag.ModuleName = _CommonLocalizer["Freelancer"];
    ViewBag.ModuleIcon = "user";
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form asp-action="Create" asp-controller="Freelancer" method="post" class="form-freelancer">
                    <div class="row">
                        <!-- Personal Information -->
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="FullName" class="form-label">@_CommonLocalizer["FullName"]</label>
                                <input type="text" class="form-control" asp-for="FullName" placeholder="@_CommonLocalizer["FullName"]">
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">@_CommonLocalizer["Email"]</label>
                                <input type="text" class="form-control" asp-for="Email" placeholder="@_CommonLocalizer["Email"]">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>


                            <div class="row mb-3 align-items-center">
                                <div class="col-md-6">
                                    <label asp-for="PhoneNumber" class="form-label">@_CommonLocalizer["Mobile"]</label>
                                    <input type="number" class="form-control" asp-for="PhoneNumber" placeholder="@_CommonLocalizer["Mobile"]">
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label">@_CommonLocalizer["CountryCode"]</label>
                                    <select asp-for="CountryId" class="form-select select-with-flags" style="width: 100%;">
                                        @foreach (var country in countries)
                                        {
                                            var isSelected = country.Id == Model.CountryId;
                                            <option value="@country.Id" data-flag="@country.Code.ToLower()" data-dial-code="@country.DialCode" data-country="@country.Name" selected="@isSelected">
                                                @country.DialCode
                                            </option>
                                        }
                                    </select>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="DateOfBirth" class="form-label">Date of Birth</label>
                                <div class="input-group">
                                    <input type="text" asp-for="DateOfBirth" class="form-control datetime-picker" placeholder="@_CommonLocalizer["Select"]" value="" data-input data-type="datetime" data-show="future">
                                    <span class="input-group-text input-group-addon" data-toggle><i data-feather="calendar"></i></span>
                                </div>
                            </div>
                        </div>

                            <div class="mb-3">
                                <label asp-for="ProfilePicture" class="form-label">Profile Picture</label>
                                <input type="file" class="form-control" name="ProfilePictureFile" accept="image/*">
                                <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">@_CommonLocalizer["Password"]</label>
                                <input type="password" autocomplete="new-password" class="form-control" asp-for="Password" placeholder="@_CommonLocalizer["Password"]">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">@_CommonLocalizer["ConfirmPassword"]</label>
                                <input type="password" autocomplete="new-password" class="form-control" asp-for="ConfirmPassword" placeholder="@_CommonLocalizer["ConfirmPassword"]">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                           

                            <div class="mb-3">
                                <label asp-for="ExperienceLevel" class="form-label">Experience Level</label>
                                <select asp-for="ExperienceLevel"  class="form-select">
                                    <option value="">Select Experience Level</option>
                                </select>
                                <span asp-validation-for="ExperienceLevel" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Status" class="form-label">Account Status</label>
                                <select asp-for="Status" asp-items="@ViewBag.AccountStatuses" class="form-select">
                                    <option value="">Select Account Status</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="CivilID" class="form-label">Civil ID (PDF)</label>
                                <input type="file" class="form-control" name="CivilIDFile" accept=".pdf">
                                <span asp-validation-for="CivilID" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Full Width Fields -->
                        <div class="col-12">
                            <div class="mb-3">
                                <label asp-for="Bio" class="form-label">Bio</label>
                                <textarea asp-for="Bio" class="form-control" rows="4" placeholder="Enter bio"></textarea>
                                <span asp-validation-for="Bio" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="PreviousWork" class="form-label">Previous Work</label>
                                <textarea asp-for="PreviousWork" class="form-control" rows="4" placeholder="Enter previous work experience"></textarea>
                                <span asp-validation-for="PreviousWork" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="text-end">
                        <a asp-action="Index" class="btn btn-secondary me-2">
                            <i data-feather="x"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i data-feather="save"></i> Create Freelancer
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialize Feather icons
            if (typeof feather !== 'undefined') {
                feather.replace();
            }

            // Initialize form validation
            $("form").validate({
                errorPlacement: function (error, element) {
                    error.addClass("text-danger");
                    error.insertAfter(element);
                }
            });
        });
    </script>
}