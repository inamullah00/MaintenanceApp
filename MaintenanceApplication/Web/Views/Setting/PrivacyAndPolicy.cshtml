@model PrivacyAndPolicyViewModel

@{
    ViewBag.ModuleName = _CommonLocalizer["PrivacyAndPolicy"];
    ViewBag.ModuleIcon = "fa-shield-halved";
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form asp-action="PrivacyAndPolicy" asp-controller="Setting" method="post" class="forms-sample">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">
                                        <i class="link-icon feather-16" data-feather="edit"></i> @_CommonLocalizer["PrivacyAndPolicyEng"]
                                    </label>
                                    <textarea type="text" asp-for="Privacy" class="form-control tinymce" autocomplete="off" placeholder=" @_CommonLocalizer["PrivacyAndPolicyEng"]"> </textarea>
                                    <span asp-validation-for="Privacy" class="text-danger"></span>
                                </div>
                                  <div class="col-md-6 mb-3">
                                    <label class="form-label">
                                        <i class="link-icon feather-16" data-feather="edit"></i> @_CommonLocalizer["PrivacyAndPolicyArabic"]
                                    </label>
                                    <textarea type="text" asp-for="PrivacyArabic" class="form-control tinymcertl" autocomplete="off" placeholder=" @_CommonLocalizer["PrivacyAndPolicyArabic"]"> </textarea>
                                    <span asp-validation-for="PrivacyArabic" class="text-danger"></span>
                                </div>

                            </div>
                        </div>

                    </div>
                    <button type="submit" class="btn btn-primary me-2">@_CommonLocalizer["SaveBtn"]</button>
                </form>
            </div>
        </div>
    </div>
</div>